{
    "env": {
        "node": true,
        "es6": true,
        "commonjs": true,
        "browser": true
    },
    "extends": "google",
    "parserOptions": {
        "ecmaVersion": 9
    },
    "rules": {
        "comma-dangle": ["error", "never"],
        "object-curly-spacing": [2, "always"],
        "max-len": [1, 120],
        "no-invalid-this": "off",
        "indent": ["error", 2],
        "require-jsdoc": ["error", {
            "require": {
                "FunctionDeclaration": true,
                "MethodDefinition": false,
                "ClassDeclaration": false,
                "ArrowFunctionExpression": false,
                "FunctionExpression": false
            }
        }]
    }
}
